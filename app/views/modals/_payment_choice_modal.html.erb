<div class="modal fade" id="payment_choice_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Payment Options</h4>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <% if @teacher.paypal_email != "" %>
            <div class="col-md-6">
              <%= form_tag paypal_create_path, method: 'get' do %>
                <%= hidden_field_tag :teacher, @teacher.paypal_email %>
                <%= hidden_field_tag :receiver_amount, @teacher.rate %>
                <%= hidden_field_tag :paypal, '1' %>
                <%= image_submit_tag 'https://www.paypalobjects.com/en_US/i/btn/x-click-but6.gif' %>
              <% end %>
            </div> <!-- end of col-md-6-->
          <% end %>


          <% if @teacher.stripe_access_token != "" %>
            <div class="col-md-6">
              <%= form_tag stripe_create_path do %>
                <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                  data-key="pk_test_bedFzS7vnmzthkrQolmUjXNn"
                  data-description="Book your lesson"
                  data-currency="eur"
                  data-amount="<%= (@teacher.rate * 100).to_i %>"></script>
                <%= hidden_field_tag :amount, @teacher.rate %>
                <%= hidden_field_tag :teacher_id, @teacher.id %>
              <% end %>
            </div> <!-- end of col-md-6-->

          <% end %>

        </div> <!-- end of container-fluid -->
      </div> <!-- end of modal-body -->
      <!-- <div class="modal-footer"> 
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div> --> <!-- end of modal-footer -->
    </div> <!-- end of modal-content -->
  </div> <!-- end of modal-dialog -->
</div> <!-- end of modal fade -->

