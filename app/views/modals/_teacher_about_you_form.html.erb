<div class="modal fade" id="teacher_about_you_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">About you</h4><small>Tell us about yourself</small>
      </div>
      <div class="modal-body">
        <div  class="container-fluid">
          <%= form_for @context do |f| %>
            <div class="col-xs-12 col-sm-12 col-md-12">
              <div class="form-group">
                <label>Overview of your service</label>
                <%= f.text_area :overview, rows: '15', class: "form-control input-sm", placeholder: 'Description' %>
                <!-- <input type="text" name="last_name" id="last_name" class="form-control input-sm" placeholder="Last Name"> -->
              </div>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-12">
              <div class="form-group">
                <label>Your rate: </label>
                <%= f.text_field :rate, :class => 'form-control', :value => (number_with_precision(f.object.rate, :precision => 2) || 0) %>
                <!-- <input type="text" name="last_name" id="last_name" class="form-control input-sm" placeholder="Last Name"> -->
              </div>
            </div>
            
            
            <div class="container-fluid">
            	<div class="modal-footer">
	              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
	              <%= f.submit 'Update info', class: 'btn btn-primary' %>
	            </div>
            </div>
          <% end %>
          
        </div> <!-- end of container-fluid -->
      </div>
      
    </div>
  </div>
</div>