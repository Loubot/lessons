<div class="modal fade" id="teachers_experience_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Add experience</h4>
      </div>
      <div class="modal-body">
        <div  class="container-fluid">
          <%= form_for @experience do |f| %>
            <div class="row">
              <div class="col-xs-12 col-sm-12 col-md-12">
                <div class="form-group">
                  <%= f.text_field :title, class: "form-control input-sm", placeholder: 'Title' %>
                  <!-- <input type="text" name="first_name" id="first_name" class="form-control input-sm" placeholder="First Name"> -->
                </div>
              </div>
              <div class="col-xs-12 col-sm-12 col-md-12">
                <div class="form-group">
                  <%= f.text_area :description, class: "form-control input-sm", placeholder: 'Description: Please give some detail' %>
                  <!-- <input type="text" name="last_name" id="last_name" class="form-control input-sm" placeholder="Last Name"> -->
                </div>
              </div>
            </div>

            <div class="form-group">
              <label class="control-label col-sm-2">From:</label>
              <%= f.date_select :start,:order => [:year, :month], start_year: 1950, class: 'form-control' %>
              <!-- <input type="email" name="email" id="email" class="form-control input-sm" placeholder="Email Address"> -->
            </div>
            <div class="form-group" id="endDate">
              <label class="control-label col-sm-2">To:</label>
              <%= f.date_select :end,:order => [:year, :month], start_year: 1950,  class: 'form-control' %> <br>
              
              <!-- <input type="email" name="email" id="email" class="form-control input-sm" placeholder="Email Address"> -->
            </div>
            <%= f.check_box :present, id: 'visible_check', value: '0' %><%= f.label(:present, 'Still ongoing') %>
            <%= f.hidden_field :teacher_id, value: current_teacher.id %>
            
            
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              <%= f.submit 'Add experience', class: 'btn btn-primary' %>
            </div>
          <% end %>
          
        </div> <!-- end of container-fluid -->
      </div>
      
    </div>
  </div>
</div>
