<% content_for :title, 'Connect with local students and teach what you love' %>
<% content_for :description, "Grow and market your teaching business in an online marketplace" %>
<div class="container-fluid teach_page">
  <div class="row teach_page">    
    <div class="teachers_reg_photo">
      <div class="col-md-6 col-xs-12 col-sm-12 teacher_registration_container left">
        <h2 class="teacher_registration_container_header"><strong>Teach</strong></h2><span class="label label-primary">Register below to become a teacher</span><br><br>
        <div class="teachers_form_container">
          <%= form_for(:teacher, :url => registration_path(:teacher), class: 'teacher_registration_form') do |f| %>
          <div class="input-group">
            <span class="input-group-addon glyphicon glyphicon-envelope"></span>
            <% if !is_mobile? %>
              <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
            <% else %>
              <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
            <% end %>
          </div><br>
               
          <div class="input-group">
            <span class="input-group-addon glyphicon glyphicon-user"></span>
            <%= f.text_field :first_name, class: 'form-control', placeholder: 'First name' %>
          </div><br>
          
          <div class="input-group">
            <span class="input-group-addon glyphicon glyphicon-user"></span>
            <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last name' %>
          </div><br>
          
          <div class="input-group">
            <span class="input-group-addon glyphicon glyphicon-lock"></span>
            <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'form-control' %>
          </div><br>
          
          <div class="input-group">
            <span class="input-group-addon glyphicon glyphicon-lock"></span>
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm password', class: 'form-control' %>
          </div><br>        
          <%= f.hidden_field(:is_teacher, value: true) %>
          <div class="teachers_reg_buttons">
            <%= f.submit "Sign up", class: 'btn btn-success' %> or 
            <%= link_to 'Login', '#', data: { toggle: 'modal', target: '#login_modal' }, class: 'teach_page_login_link' %>
           
          </div>
        <% end %>
        </div>
        <div class="fb_login_container">
          <%= link_to image_tag('facebook_reg.png'), "/teachers/auth/facebook?origin=#{request.original_url}", class: 'fbLogin_link' %>
          
        </div> <!-- end of fb_login_container -->
        
      </div> <!-- end of col-md-6 teacher_registration_container -->
      <div class="col-md-6 col-xs-12 col-sm-12 teachers_blurb_container hidden-xs">
        <h2 class="teachers_blurb_header">Grow and market your teaching business in an online marketplace</h2>
        <h4 class="teachers_blurb">Connect with local students and teach what you love</h4>
      </div> <!-- end of teachers_blurb_container -->
      <div class="teachers_small_blurb_container col-xs-12 visible-xs">
        <h3 class="teachers_blurb_header">Grow and market your teaching business in an online marketplace</h3>
        <h4 class="teachers_blurb_header">Connect with local students and teach what you love</h4>
      </div> <!-- end of teachers_pros_container -->
    </div> <!-- end of teachers_reg_photo -->
  </div> <!-- end of row -->  
</div> <!-- end of container-fluid -->

