      </div> <!-- end of center_text -->
    </div> <!-- end of col-md-8 -->
  </div> <!--end of row teach_page -->
  <div class="row teach_page">
    <div class="col-md-4 col-sm-4 col-xs-12">
      <%= image_tag 'money_bags.jpg', alt: 'Increase your earnings', class: 'img-responsive' %>
    </div> <!-- end of col-md-4 -->
