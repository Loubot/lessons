  <div class="row teach_page">
    <div class="col-md-4 col-sm-4 col-xs-12">
      <%= image_tag 'loud_speaker.jpg', alt: 'Create a free profile', class: 'img-responsive' %>
    </div> <!-- end of col-md-4 -->
    <div class="col-md-8 col-sm-8 col-xs-12">
      <div class="center_text">
