<%= @params %><br>
<%= @distance %>
<% content_for :title, "The place to connect with local teachers and learn" %>
<% content_for :description, "LearnYourLesson lets you connect with local teachers in your area for lessons on music, photography, languages or anything else." %>
<div  class="container-fluid main_page_search_container">
  <%= form_tag display_subjects_path, method: 'get', id: 'main_subject_search', class: 'form-inline' do %>
    <div class="form-group">
      <%= text_field_tag :search_subjects, params[:search], :utf8_enforcer_tag => false,value: params[:search_subjects], placeholder: 'What do you want to learn today?', class: 'typeahead subject', autocomplete: :off %>
    </div>
    <div class="form-group">
      <%= text_field_tag :search_position, params[:search], :utf8_enforce_tag => false,value: params[:search_position],placeholder: 'County', class: 'typeahead county', autocomplete: :off %>
    </div>
     <div class="container-fluid search_submit_container">
      <%= submit_tag "I'm ready to learn", id: 'search_submit', class: 'btn btn-info' %>
    </div>
    <div class="pull-right col-md-4">
      <label>Sort by:</label>
      <%= select_tag 'sort_by', options_for_select(['Distance', 'Rate: lowest first', 'Rate: highest first'], selected: params[:sort_by]), class: 'form-control distance_rate' %>
    </div>
  <% end %>
  <div id="display_search_results">
    <form class="form-horizontal col-md-4 pull-right" role="form">
      
    </form>
  </div>
</div> <!-- end of container-fluid main_page_search -->

<% if @teachers == [] %>
	No results found
<% else %>
	<div id="display_search_results">
    <div class="apple_pagination">
      <div class="page_info">
        <%= page_entries_info @teachers %>
      </div>
      <%= will_paginate @teachers, :container => false %>
    </div>

    <% @teachers.each do |t| %>
      <%= puts "teacher #{t.id}" %>
    <% end %>
    
		<%= render partial: 'static/subjects_search', collection: @teachers, as: :teacher %>
	</div>
<% end %>


