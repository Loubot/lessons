<%= content_for :title, 'Mailing list' %>
<div class="container-fluid">
	<div class="row">
    <div class="span12">
		<div class="center well well-small text-center">
        <h2>Get the Sca!</h2>
        
        <p>Subscribe to our mailing list for updates</p>
        
        
        <%= form_tag({ controller: 'static', action: 'add_to_list'}, method: 'post') %>
        <div class="input-prepend"><span class="glyphicon glyphicon-envelope"></span>
            <%= text_field_tag 'email', nil,id: 'email', placeholder: 'your@email.com', size: 40 %>
                
            </div>
            <br />
            <input type="submit"  value="Subscribe Now!" class="btn btn-large" id='search_submit' />
      
        </div>    
    </div>
	</div>
</div>