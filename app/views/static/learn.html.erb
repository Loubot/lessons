<% content_for :title, 'Login, Sign up to connect with teachers, expand your knowledge' %>
<% content_for :description, "LearnYourLesson lets you connect with local teachers in your area for lessons on music, photography, languages or anything else." %>
<div class="container-fluid ">
  <div class="row">
    <div class="learn_reg_photo">
      <div class="col-md-6 col-xs-12 col-sm-12 student_reg_container">
        <h2 class="teacher_registration_container_header"><strong>Learn</strong></h2><span class="label label-primary">Register below to become a student</span><br><br>
        <div class="teachers_form_container">
          <%= form_for(:teacher, :url => registration_path(:teacher), class: 'teacher_registration_form') do |f| %>
          <div class="input-group">
            <span class="input-group-addon glyphicon glyphicon-envelope"></span>
            <% if !is_mobile? %>
              <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
            <% else %>
              <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
            <% end %>
          </div><br>
               
          <div class="input-group">
            <span class="input-group-addon glyphicon glyphicon-user"></span>
            <%= f.text_field :first_name, class: 'form-control', placeholder: 'First name' %>
          </div><br>
          
          <div class="input-group">
            <span class="input-group-addon glyphicon glyphicon-user"></span>
            <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last name' %>
          </div><br>
          
          <div class="input-group">
            <span class="input-group-addon glyphicon glyphicon-lock"></span>
            <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'form-control' %>
          </div><br>
          
          <div class="input-group">
            <span class="input-group-addon glyphicon glyphicon-lock"></span>
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm password', class: 'form-control' %>
          </div><br>        
          <%= f.hidden_field(:is_teacher, value: false) %>
          <div class="teachers_reg_buttons">
            <%= f.submit "Sign up", class: 'btn btn-success' %> or 
            <%= link_to 'Login', '#', data: { toggle: 'modal', target: '#login_modal' }, class: 'teach_page_login_link' %>
           
          </div> <!-- end of teachers_reg_buttons -->
        <% end %>
        </div>
        <div class="fb_login_container">
          <%= link_to image_tag('facebook_reg.png'), "/teachers/auth/facebook?origin=#{request.original_url}", class: 'fbLogin_link' %>
          
        </div>
      </div> <!-- end of col-md-6 -->
      <div class="col-md-6 col-sm-12 col-xs-12 learn_blurb hidden-xs">
        <h1 class="students_blurb_header">What will I learn today?</h1>
        <p class="students_blurb_text">Arrange a 1-on-1 lesson on the subject you want to learn today</p>
      </div>
    </div>
  </div> <!-- end of row -->
</div> <!-- end of container-fluid -->
<div class="container-fluid learn_pros_main_container">
  <div class="row learn_pros_row">
    <div class="learn_pros_photo left col-md-4">
      <div class="learn_pros_container">
        <h3 class="learn_blurb_mini_headers">Find the right teacher for you</h3>
        <h4 class="learn_blurb_info">yada yada</h4>
      </div> <!-- end of learn_pros_container -->
    </div> <!-- end of learn_pros_photo left-->
    <div class="learn_pros_photo middle col-md-4">
      <div class="learn_pros_container">
        <h3 class="learn_blurb_mini_headers">Choose from scores of subjects</h3>
        <h4 class="learn_blurb_info">yada yada</h4>
      </div> <!-- end of learn_pros_container -->
    </div> <!-- end of learn_pros_photo middle-->
    <div class="learn_pros_photo right col-md-4">
      <div class="learn_pros_container">
        <h3 class="learn_blurb_mini_headers">Satisfaction guaranteed</h3>
        <h4 class="learn_blurb_info">yada yada</h4>
      </div> <!-- end of learn_pros_container -->
    </div> <!-- end of learn_pros_photo right-->
  </div> <!-- end of learn_pros_row -->
</div> <!-- end of learn_pros_container -->