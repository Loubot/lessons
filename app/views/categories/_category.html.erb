<div class="panel panel-default">
	<div class="panel-heading">
		<h4 class="panel-title">
			<a href="#<%= category.name.parameterize.underscore %>" data-parent="#accordian" data-toggle="collapse"><%= category.name %></a>
		</h4>
	</div>
	<div id="<%= category.name.parameterize.underscore %>" class="panel-collapse collapse">
		<div class="panel-body">
			<ul class="list-group">
				<%= form_for @subject, html: { class: 'form-horizontal' } do |s| %>
					<%= s.hidden_field :category_id, value: category.id %>
					<div class="form-group">
						<%= s.label :name, class: 'col-sm-2 control-label' %>
						<div class="col-sm-10">
							<%= s.text_field :name, placeholder: 'Subject name' %>
						</div> 
					</div>
					<div class="form-group">
						<div class="col-sm-offset-2 col-sm-10">
							<%= s.submit class: 'btn btn-info' %>
						</div>
					</div>
				<% end %>
				<% category.subjects.each do |subject| %>
					<li class="list-group-item"><%= subject.name %></li>
				<% end %>
			</ul>
		</div>
	</div>
</div>

