
<div class="container-fluid teacher_edit_profile">
	<div class="row">
		
		<div class="col-md-12">
			<div class="panel panel-default">
				<div class="panel-heading teachers_info"><h2 class="panel-title pull-left">Your info</h2>
					<div class="btn-group pull-right">            
		       	<button class="btn btn-default" data-toggle="modal" data-target="#teachers_info_modal"><span class="glyphicon glyphicon-pencil"></span>Edit</button>
		      </div> <!-- end of btn-group pull-right -->
				</div> <!-- end of panel_heading -->
				<div class="panel-body">
					<div class="row">
					  <div class="col-xs-6 col-md-3">
					    <a href="#" class="thumbnail" data-toggle="modal" data-target="#teachers_dropzone_modal">
					    	<%= show_teacher_silhouette_helper(@context)  %>
					      
					    </a> 
					  </div> <!-- end of col-xs-6 col-md-3 -->
					  <div class="col-md-6">
					  	<div class="row">
					  		<span class="col-md-3">Name:</span><span class="col-md-9"><%= @context.first_name %></span>
								<span class="col-md-3">Surname:</span><span class="col-md-9"><%= @context.last_name %></span>
								
								<span class="col-md-3">Email:</span><span class="col-md-9"><%= @context.email %></span>
								<span class="col-md-3">Address:</span ><span class="col-md-9"><%= @context.address %></span>
					  	</div>
					  </div><!--  end of col-md-6 -->
					</div> <!-- end of row -->
					
				</div> <!-- end of panel-body -->
			</div> <!-- end of panel panel-default -->
		</div> <!-- end of col-md-10 -->
	</div> <!-- end of row -->
</div> <!-- end of teacher_edit_profile -->

