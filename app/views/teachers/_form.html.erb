<div class="container-fluid ">
	<div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-4">
        	<div class="panel panel-default">
        		<div class="panel-heading">
			    		<h3 class="panel-title">Update your details<small>It's free!</small></h3>
			 			</div>
			 			<div class="panel-body">
			    		<%= form_for @teacher do |f| %>
			    			<div class="row">
			    				<div class="col-xs-6 col-sm-6 col-md-6">
			    					<div class="form-group">
			    						<%= f.text_field :first_name, class: "form-control input-sm", placeholder: 'First name' %>
			                <!-- <input type="text" name="first_name" id="first_name" class="form-control input-sm" placeholder="First Name"> -->
			    					</div>
			    				</div>
			    				<div class="col-xs-6 col-sm-6 col-md-6">
			    					<div class="form-group">
			    						<%= f.text_field :last_name, class: "form-control input-sm", placeholder: 'Last name' %>
			    						<!-- <input type="text" name="last_name" id="last_name" class="form-control input-sm" placeholder="Last Name"> -->
			    					</div>
			    				</div>
			    			</div>

			    			<div class="form-group">
			    				<%= f.text_area :address, class: "form-control input-sm", placeholder: "Address" %> 
			    				<!-- <input type="email" name="email" id="email" class="form-control input-sm" placeholder="Email Address"> -->
			    			</div>
			    			<div class="form-group">
			    				<%= f.text_area :overview, class: "form-control input-sm", placeholder: "Overview" %> 
			    				<!-- <input type="email" name="email" id="email" class="form-control input-sm" placeholder="Email Address"> -->
			    			</div>

			    			
			    			<%= f.submit 'Update details', class: 'btn btn-info btn-block' %>
			    		
			    		<% end %>
			    	</div>
	    		</div>
    		</div> <!-- end of col-xs-12 col-sm-8 col-md-4 -->
    		<div class="col-md-4">
    			<%= render 'dropzone' %>
    		</div>
    	</div>

</div>