<%= content_for :title, 'Qualifications' %>
<div class="outer-container">
	<% cache [@context, @qualification] do	%>
		<div class="container-fluid " id="qual_container">
			
			<div class="col-md-12" id="qual_head">
				<h2>Qualifications</h2>
			
			</div>
			
			
			<div class="col-md-9" id="qual_form">
					<%= form_for [@context, @qualification], html: { class: 'form-horizontal' } do |f| %>
						<div class="form-group">
							<label class="control-label col-sm-2">Title:</label>
							<div class="col-sm-10">
					      <%= f.text_field :title, placeholder: 'Qualification name?', class: "form-control" %>
					    </div> <!-- end of col-sm-10 -->
						</div> <!-- end of form-group -->
						<div class="form-group">
							<label class="control-label col-sm-2">School:</label>
							<div class="col-sm-10">
								<%= f.text_field :school, placeholder: 'Whered did you study?', class: 'form-control' %>
							</div>
						</div> <!-- end of form-group -->
						<div class="form-group">
							<label class="control-label col-sm-2">From:</label>
							<div class="col-sm-10">
								<%= f.date_select :start,:order => [:year, :month], start_year: 1950, class: 'form-control' %>	
							</div>
							
						</div>
						<div class="form-group" id="qualification_endDate">
							<label class="control-label col-sm-2">To:</label>
							<div class="col-sm-10">
								<%= f.date_select :end,:order => [:year, :month], start_year: 1950, end_year: Time.now.year,  class: 'form-control' %>
							</div>
							
							
						</div>
						<%= f.hidden_field :teacher_id, value: current_teacher.id %>
						<div class="form-group">
							<div class="col-sm-offset-2 col-sm-10">
								<div class="checkbox">
									<label><%= f.check_box :present, id: 'qualification_present', value: '0' %>Still ongoing</label>
								</div>
							</div>
						</div>
						
						<div class="form-group">
							<div class="col-sm-offset-2 col-sm-10">
								<%= f.submit id: 'qual_submit', class: 'btn btn-primary' %>
							</div>
							
						</div>
					<% end %>
			</div>
			
		</div>
		<hr>
		<div class="container-fluid">
			<% if @qualifications.length != 0 %>
				<%= render @qualifications %>
			<% else %>
				<h2>Your qualifications will appear here </h2>
			<% end %>
		</div>
	<% end %> <%# end of cache %>
	<%= render 'partials/teachers_stuff/invitation' %>
</div> <!-- end of outer-container -->
