<% if !is_mobile? %>
  
    <div id="fb-root"></div>
    <div id="share_buttons">
      
      <div class="fb-like" data-href="<%= request.original_url %>" data-layout="button" data-action="like" data-show-faces="false" data-share="true">
      </div>
    	
      <div class="fb-like">
        <script src="//platform.linkedin.com/in.js" type="text/javascript"> lang: en_US</script>
        <script type="IN/Share" ></script>
      </div>

      
      <div class="fb-like">
        <a href="https://twitter.com/share" class="twitter-share-button" data-url="http://learn-your-lesson.herokuapp.com" data-text="Learn Your Lesson" data-count="none" data-hashtags="whatwitllyoulearn">Tweet</a>
        
